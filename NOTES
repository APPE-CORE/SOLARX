        <div className="max-w-7xl mx-auto px-6 flex justify-between items-center">
          <div 
            className="text-2xl font-bold tracking-tighter uppercase cursor-pointer hover:opacity-80 transition-opacity"
            onClick={() => navigateTo('home')}
          >
            Solar<span className={currentView === 'model-s' ? "text-rose-600" : "text-orange-500"}>X</span>
